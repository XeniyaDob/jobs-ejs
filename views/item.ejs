<%- include("partials/head.ejs") %>
<%- include("partials/header.ejs") %>
<h2>Edit Plant info</h2>

<form method="POST" action="/items/update/<%= item.id %>">
    <div>
        <label for="title">Name:</label>
        <input type="text" id="title" name="title" value="<%= item ? item.name : '' %>"/>
    </div>
    <div>
        <label for="type">Type:</label>
        <select id="type" name="type">
            <option value="trees" <%= item && item.type === 'trees' ? 'selected' : '' %>>trees</option>
            <option value="shrubs" <%= item && item.type === 'shrubs' ? 'selected' : '' %>>shrubs</option>
            <option value="herbs" <%= item && item.type === 'herbs' ? 'selected' : '' %>>herbs</option>
            <option value="ferns" <%= item && item.type === 'ferns' ? 'selected' : '' %>>fern</option>
        </select>
    </div>
    
    <button type="submit">edit</button>
    <a href="/items">
        <button type="button">cancel</button>
    </a>
    <input type="hidden" name="_csrf" value="<%= _csrf %>" />
</form>

<%- include("partials/footer.ejs") %>